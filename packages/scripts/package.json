  "dependencies": {
    "camel-case": "^4.1.2",
    "cpy": "^8.1.2",
    "del": "^6.0.0",
    "dotenv": "^10.0.0",
    "fast-glob": "^3.2.7",
    "p-limit": "^4.0.0",
    "param-case": "^3.0.4",
    "picocolors": "^1.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "package"
  },
  "readme": ""
