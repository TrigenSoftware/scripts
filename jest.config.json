{
  "testEnvironment": "node",
  "testRegex": "packages/.*\\.spec\\.(jsx?|tsx?)$",
  "modulePathIgnorePatterns": [
    "<rootDir>/packages/.*/dist/"
  ],
  "transform": {
    "^.+\\.(t|j)sx?$": ["@swc/jest", {
      "env": {
        "targets": {
          "node": 14
        }
      }
    }]
  },
  "collectCoverage": false
}
